{
  "layerRules": [
    {
      "ind": 1,
      "fontKey": "title",
      "textInd": [0],
      "maxLines": 2,
      "maxWidth": 1224,
      "colorKey": "titleText"
    },
    {
      "ind": 2,
      "fontKey": "title",
      "textInd": [1],
      "maxLines": 2,
      "maxWidth": 1224,
      "colorKey": "titleText"
    },
    {
      "ind": 3,
      "fontKey": "textBold",
      "textInd": [2],
      "maxLines": 2,
      "maxWidth": 1080,
      "colorKey": "subtitleTopText"
    },
    {
      "ind": 4,
      "colorKey": "subtitleTopBackground"
    },
    {
      "ind": 5,
      "fontKey": "text",
      "textInd": [3],
      "maxLines": 2,
      "maxWidth": 1080,
      "colorKey": "subtitleBottomText"
    },
    {
      "ind": 6,
      "colorKey": "subtitleBottomBackground"
    },
    {
      "ind": 7,
      "colorKey": "titleBackground",
      "opacityKey": "titleBackgroundOpacity"
    }
  ],
  "variables": [
    {
      "key": "",
      "value": "harmonizeFontSize(1,2)",
      "type": "unit",
      "description": "harmonize titleTop and titleBottom fontSize"
    },
    {
      "key": "$var0",
      "value": "max(getTextLayerWidth(3),getTextLayerWidth(5))+150",
      "type": "number",
      "description": "harmonize titleTop and titleBottom fontSize"
    },
    {
      "key": "$var1",
      "value": "getTextMeasureHeight(3)+30",
      "type": "number",
      "description": "textTopContainer height"
    },
    {
      "key": "$var2",
      "value": "getTextMeasureHeight(5)+30",
      "type": "number",
      "description": "textBottomContainer height"
    },
    {
      "key": "$var3",
      "value": "min(getBottomOfSafeArea()+getAscent(5)-getTextMeasureHeight(5)+getLastLineDescent(5)-80,1250+getAscent(5)-getTextMeasureHeight(5)+getLastLineDescent(5))",
      "type": "number",
      "description": "textBottom y position"
    },
    {
      "key": "$var4",
      "value": "$var3-getAscent(5)+getTextMeasureHeight(5)/2",
      "type": "number",
      "description": "textBottomContainer y position"
    },
    {
      "key": "$var5",
      "value": "$var4-$var2/2-$var1/2-getTextMeasureHeight(3)/2+getAscent(3)",
      "type": "number",
      "description": "textTop y position"
    },
    {
      "key": "$var6",
      "value": "$var5-getAscent(3)+getTextMeasureHeight(3)/2",
      "type": "number",
      "description": "textTopContainer y position"
    },
    {
      "key": "$var7",
      "value": "720-getTextMeasureHeight(1)+getAscent(1)-getTextFontSize(1)*0.2",
      "type": "number",
      "description": "titleTop y position"
    },
    {
      "key": "$var8",
      "value": "720+getAscent(2)+getTextFontSize(2)*0.2",
      "type": "number",
      "description": "titleBottom y position"
    }
  ]
}